{
  "name": "slds-copilot",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "eslint . --ext .ts,.tsx --max-warnings=0 && prettier --check .",
    "lint:fix": "eslint . --ext .ts,.tsx --fix && prettier --write .",
    "format": "prettier --write .",
    "typecheck": "tsc --noEmit",
    "prepare": "husky install"
  },
  "dependencies": {
    "clsx": "^2.1.0",
    "dompurify": "^3.0.6",
    "next": "latest",
    "react": "latest",
    "react-dom": "latest"
  },
  "devDependencies": {
    "@types/dompurify": "^3.0.5",
    "@types/node": "^20.11.30",
    "@types/prismjs": "^1.26.5",
    "@types/react": "^18.2.66",
    "@typescript-eslint/eslint-plugin": "^8.46.2",
    "@typescript-eslint/parser": "^8.46.2",
    "autoprefixer": "^10.4.19",
    "eslint": "8.57.0",
    "eslint-config-next": "latest",
    "eslint-config-prettier": "^9.1.0",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-react": "^7.37.5",
    "husky": "^9.1.4",
    "lint-staged": "^15.2.2",
    "postcss": "^8.4.38",
    "prettier": "3.3.3",
    "prismjs": "^1.29.0",
    "tailwindcss": "^3.4.9",
    "typescript": "^5.4.5"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix --max-warnings=0",
      "prettier --write"
    ],
    "*.{md,css}": [
      "prettier --write"
    ]
  }
}
